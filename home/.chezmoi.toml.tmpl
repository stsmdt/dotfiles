{{- $name := "Steffen Schmidt" -}}
{{- $email := "git@brombeersaft.com" -}}

{{- if (env "ASK") }}
{{-   $name = promptString "Full Name" $name -}}
{{-   $email = promptString "Email" $email -}}
{{- end }}

[data]
    name = {{ $name | quote }}
    email = {{ $email | quote }}
    zshPlugins = [
{{ if eq .chezmoi.os "darwin" }}
        "brew",
{{ end -}}
        "git",
        "golang",
        "per-directory-history",
        "sudo",
        "zsh-syntax-highlighting",
    ]
